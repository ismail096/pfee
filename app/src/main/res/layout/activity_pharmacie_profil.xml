<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pharmacie_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#20B2AA"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.navigation.drawer.activity.Activity.Profiles.PharmacieProfil">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#FAF0E6"
        >

    <LinearLayout
        android:background="@drawable/edit_text"
        android:padding="3dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:textSize="17dp"
            android:text="Nom du medecin"
            android:textColor="#f15c44"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/PharmacieName"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
        <ImageView
            android:layout_marginRight="-20dp"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/notfav"
            android:layout_gravity="right"
            android:id="@+id/fav_phar"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.08"
            android:layout_height="match_parent"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:src="@drawable/call"
            android:id="@+id/telp"
            android:clickable="true"
            />
    </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>
    <TextView
        android:text="Informations : "
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <TableLayout
        android:background="#FAF0E6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.4"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow

            android:background="@drawable/edit_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView

                android:text="pharmacien : "
                />
            <TextView
                android:textColor="#f15c44"
                android:id="@+id/pharmacienP" />
        </TableRow>
        <TableRow
            android:background="@drawable/edit_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:text="Tel :"/>
            <TextView
                android:textColor="#f15c44"
                android:id="@+id/telpM" />
        </TableRow>

        <TableRow
            android:background="@drawable/edit_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:text="Adresse :"/>
            <TextView
                android:textColor="#f15c44"
                android:id="@+id/AdresseP" />
        </TableRow>
        <TableRow
            android:background="@drawable/edit_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:text="Secteur :"/>
            <TextView
                android:textColor="#f15c44"
                android:id="@+id/SecteurP" />
        </TableRow>
    </TableLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <ImageView
            android:layout_weight="0.35"
            android:id="@+id/retourpp"
            android:layout_width="0dp"
            android:layout_marginLeft="-15dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />
        <ImageView
            android:layout_weight="0.6"
            android:id="@+id/localPharmacie"
            android:layout_width="0dp"
            android:layout_marginRight="-75dp"
            android:layout_height="match_parent"
            android:src="@drawable/localiserpharmacie" />
    </LinearLayout>

</LinearLayout>
